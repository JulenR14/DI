<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plataformas">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/Plataformas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plataforma : "
            android:layout_margin="20dp"
            android:textSize="30dp" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.chip.Chip
                android:id="@+id/ps4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS4"
                style="@style/Widget.MaterialComponents.Chip.Filter"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/pc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC"
                style="@style/Widget.MaterialComponents.Chip.Filter"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/xbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XBOX"
                style="@style/Widget.MaterialComponents.Chip.Filter"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/wii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WII"
                style="@style/Widget.MaterialComponents.Chip.Filter"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/wiiu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIIU"
                style="@style/Widget.MaterialComponents.Chip.Filter"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/tresds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3DS"
                style="@style/Widget.MaterialComponents.Chip.Filter"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/x360"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X360"
                style="@style/Widget.MaterialComponents.Chip.Filter"/>

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/genero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GÃ©neros : "
            android:layout_margin="20dp"
            android:textSize="30dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="10dp"
        app:fabAlignmentMode="center"
        app:fabAnchorMode="cradle"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabButtomAppBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/done_fill0_wght400_grad0_opsz24"
        app:layout_anchor="@id/ButtonBar"
        android:layout_gravity="center"
        app:fabSize="normal"
        app:elevation="8dp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>